case erlang:function_exported(rebar3, main, 1) of
    true -> % rebar3
        CONFIG;
    false -> % rebar 2.x
        RefToTag = fun
            ({App, Vsn, {git, Url, {ref, Ref}}}) -> {App, Vsn, {git, Url, {tag, Ref}}};
            (Other                             ) -> Other
        end,
        {value, {deps, Deps}, ConfigWoDeps} = lists:keytake(deps, 1, CONFIG),
        [{deps, lists:map(RefToTag, Deps)} | ConfigWoDeps]
end.
